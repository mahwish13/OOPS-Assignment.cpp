// program107_abstract_shape.cpp
#include <iostream>
using namespace std;

class Shape {
public:
    virtual double area() = 0;
};

class Rectangle : public Shape {
private:
    double length, width;

public:
    Rectangle(double l, double w) {
        length = l;
        width = w;
    }

    double area() {
        return length * width;
    }
};

int main() {
    Shape* s = new Rectangle(5, 4);
    cout << "Area: " << s->area() << endl;
    
    delete s;
    return 0;
}
